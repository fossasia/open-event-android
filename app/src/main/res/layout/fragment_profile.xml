<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            app:title="@string/profile"
            app:titleTextColor="@color/white" />

        <LinearLayout
            android:id="@+id/accountInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_large"
            android:layout_marginTop="@dimen/layout_margin_large"
            android:layout_marginEnd="@dimen/layout_margin_large"
            android:layout_marginBottom="@dimen/layout_margin_medium"
            android:background="@drawable/border_curved"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/accountAvatar"
                android:layout_width="@dimen/item_image_view_large"
                android:layout_height="@dimen/item_image_view_large"
                android:layout_gravity="center_horizontal"
                android:padding="@dimen/padding_large"
                tools:src="@drawable/ic_account_circle_grey" />

            <TextView
                android:id="@+id/accountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_expanded_title"
                tools:text="@string/name_preview" />

            <TextView
                android:id="@+id/accountEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_medium"
                android:gravity="center"
                android:textSize="@dimen/text_size_large"
                tools:text="@string/email_preview" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileSettingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_large"
            android:layout_marginTop="@dimen/layout_margin_medium"
            android:layout_marginEnd="@dimen/layout_margin_large"
            android:layout_marginBottom="@dimen/layout_margin_medium"
            android:background="@drawable/border_curved"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_large"
            android:paddingTop="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_large"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/profile_settings"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_expanded_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/event_details_divider"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_marginBottom="@dimen/layout_margin_medium"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/accountVerified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawableEnd="@drawable/ic_tick_inside_circle"
                android:drawablePadding="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/verified"
                android:textColor="@android:color/holo_green_light"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/accountNotVerified"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/not_verified"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/editProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/edit_profile"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/changePassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/title_change_password"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/deleteAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_medium"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/delete_account"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_large"
            android:layout_marginTop="@dimen/layout_margin_medium"
            android:layout_marginEnd="@dimen/layout_margin_large"
            android:layout_marginBottom="@dimen/layout_margin_medium"
            android:background="@drawable/border_curved"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_large"
            android:paddingTop="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_large">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/general_settings_and_support"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_expanded_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/event_details_divider"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_marginBottom="@dimen/layout_margin_medium"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/settings"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/manageEvents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/manage_events"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/ticketIssues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_medium"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/ticket_issues"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin_large"
            android:layout_marginTop="@dimen/layout_margin_medium"
            android:layout_marginEnd="@dimen/layout_margin_large"
            android:layout_marginBottom="@dimen/layout_margin_large"
            android:background="@drawable/border_curved"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_large"
            android:paddingTop="@dimen/padding_medium"
            android:paddingEnd="@dimen/padding_large">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_expanded_title" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/event_details_divider"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_marginBottom="@dimen/layout_margin_medium"
                android:background="@color/grey" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_medium"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/logout"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size_large" />

            <TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_margin_medium"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_small"
                android:paddingBottom="@dimen/padding_small"
                android:text="@string/login"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
